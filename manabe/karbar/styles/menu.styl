@require 'moteghayer'
.menu
  direction rtl
  font-family 'WYekan'
  background-color lighten(rang, 40%)
  nav
    display flex
    flex-direction column
    justify-content center
    font-size 1.2em
    width 100%
    position absolute
    z-index: 99
    transition all 0.35s
    .menu_item
      height 3em
      line-height 3em
      .i
        background darken(rang, 40%)
        display block
        position absolute
        right 0
        height 100%
        line-height inherit
        width 3em
        text-align center
        transition all 0.35s
    a
      text-decoration none
      position relative
      display block
      height 100%
      background rang
      color white
      z-index: 2
      span
        display block
        margin-right 3.6em
        width auto
        transition margin-right 0.5s ease
    a::before
      content: ""
      background darken(rang, 40%)
      position absolute
      z-index -1
      top 0
      bottom 0
      left 100%
      right -100%
      transition all 0.35s
    a:hover::before
      left 0
      right 0
      top 0
      bottom 0
      transition all 0.35s
    a:hover
      .i
        font-size 1.25em
        width 3.6em
        transition all 0.35s
      span
        margin-right 4.8em
    div
      border-bottom 0.15em solid lighten(rangRGB(0.4), 80%)
      &:last-child
        border-bottom none

.dokmen
  border solid white 0.19rem
  background-color rangRGB(0.7)
  box-shadow 0 0 8px darken(rang, 70%)
  text-shadow 2px 2px 2px darken(rang, 70%)
  color white
  border-radius 0.6rem
  padding 0
  margin 0.4rem 2rem 0 0
  height 3rem
  width 3rem
  font-size 1.2rem
  transition all 0.3s
  &:hover
    width 5.5rem
    background-color rangRGB(1)
    .rel
      .t-menu
        opacity 1
        z-index 550
      .icm
        font-size 2rem
        top -1.1rem
      .icl
        font-size 2.4rem
        right 3.25rem
        top -1.2rem
  .rel
    position relative
    .t-menu
      position absolute
      right 1.9rem
      top -1.4rem
      font-size 1.6rem
      opacity 0
      z-index 500
      color white
      transition all 0.3s
    .icm
      position absolute
      right 0.1rem
      top -1.05rem
      z-index 699
      color white
      font-size 1.8rem
      transition all 0.3s
    .icl
      position absolute
      right 1.1rem
      top -1.05rem
      z-index 699
      color white
      font-size 1.8rem
      transition all 0.3s

.btn-menu
  position absolute
  bottom 3rem
  right 2.2rem
  z-index 3
  opacity 0.5
  width 7.6rem
  overflow hidden
  span
    position absolute
    opacity 0
    padding 0.2rem 0.8rem 0.2rem 0.3rem
    right 2rem
    top 0.5rem
    color white
    width 4.45rem
    border-top-left-radius 0.7rem
    border-bottom-left-radius 0.7rem
    background-color ghahvei(1)
  &:hover
    opacity 1
    span
      opacity 1
      animation fadeInRight 800ms
