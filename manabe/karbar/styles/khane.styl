@require 'moteghayer'
.zir-slide
	position relative
	background lighten(ghahvei(1), 30%)
	height 15rem
	margin-top -6rem
	border-bottom 0.32rem dashed ghahvei(1)
	border-top 0.32rem dashed ghahvei(1)
	display block
	section
		.nvsh
			col(3/4)
		a
			align(vertical)
	.al-v
		align(vertical)

.khabarha
	stack()

.khabar
	stack()
	// border 1rem solid darken(white, 30%)
	@media(min-width: 40rem)
		col(1/3, cycle: 3)
	> img
		stack()
		@media(min-width: 40rem)
			col(1/4)
	> article
		stack()
		@media(min-width: 40rem)
			col(3/4)