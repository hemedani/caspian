@require 'moteghayer'
.slider
  position relative
  height 20rem
  overflow hidden
  @media(min-width: 40rem)
    height 30rem
  @media(min-width: 54rem)
    height 40rem
  .slide
    position absolute
    top 0
    left 0
    width 100%
    box-shadow 0px 0px 15px #999
    img
      width 100%
  .arrows
    direction rtl
    position absolute
    bottom 3rem
    right 2.2rem
    z-index 3
    opacity 0.5
    width 7.6rem
    overflow hidden
    span
      position absolute
      opacity 0
      padding 0.2rem 0.8rem 0.2rem 0.3rem
      right 2rem
      top 0.5rem
      color white
      width 4.45rem
      border-top-left-radius 0.7rem
      border-bottom-left-radius 0.7rem
      background-color ghahvei(1)
    &:hover
      opacity 1
      span
        opacity 1
        animation fadeInRight 800ms
  h1
    position absolute
    top 7rem
    left 2rem
    z-index 3
    padding 0 0.8rem 0.4rem 0.8rem
    background-color sabz(0.7)
    color white
    border-top 0.4rem solid darken(sabz(1), 40%)
    border-bottom-left-radius 0.4rem
    border-bottom-right-radius 0.4rem
    box-shadow 0px 0px 5px darken(sabz(1), 90%)
  p
    position absolute
    top 12rem
    left 2rem
    z-index 3
    padding 0.2rem 0.5rem
    background-color sabz(0.7)
    color white
    border-right 0.4rem solid darken(sabz(1), 40%)
    border-bottom-left-radius 0.5rem
    border-top-left-radius 0.5rem
    box-shadow 0px 0px 5px darken(sabz(1), 90%)


// poyanmeaeish
.slide.ng-hide-add,
.slide.ng-hide-remove
  display block!important

.slide.ng-hide-add,
.slide.ng-hide-remove.ng-hide-remove-active
  animation slideInRight 800ms
  z-index 1
  h1
    animation fadeInDown 1150ms
    animation-delay 50ms
  p
    animation fadeInRight 1350ms
    animation-delay 50ms

.slide.ng-hide-add.ng-hide-add-active,
.slide.ng-hide-remove
  animation slideOutLeft 1600ms
  z-index -5
