@require 'moteghayer'
.slider
  position relative
  height 20rem
  overflow hidden
  @media(min-width: 40rem)
    height 30rem
  @media(min-width: 54rem)
    height 40rem
  .slide
    position absolute
    top 0
    left 0
    width 100%
    box-shadow 0px 0px 15px #999
    img
      width 100%
  .arrows
    direction rtl
    position absolute
    bottom 3rem
    right 2.2rem
    z-index 3
    opacity 0.5
    width 8rem
    overflow hidden
    span
      position absolute
      opacity 0
      padding 0.2rem 0.8rem 0.2rem 0.3rem
      line-height 1.5rem
      right 2rem
      top 0.7rem
      color white
      width 6rem
      height 2rem
      border-top-left-radius 0.5rem
      border-bottom-left-radius 0.5rem
      background-color darken(firoze(1), 25%)
    &:hover
      opacity 1
      span
        opacity 1
        animation fadeInRight 800ms
  h1
    position absolute
    top 7rem
    left 2rem
    z-index 3
    padding 0 0.8rem 0.4rem 0.8rem
    background-color abi(0.7)
    color white
    border-right 0.3rem solid darken(abi(1), 40%)
    border-bottom-left-radius 0.4rem
    border-top-left-radius 0.4rem
    box-shadow 0px 0px 5px darken(abi(1), 90%)
  p
    position absolute
    top 12rem
    left 2rem
    z-index 3
    padding 0.2rem 0.5rem
    background-color abi(0.7)
    color white
    border-right 0.3rem solid darken(abi(1), 40%)
    border-bottom-left-radius 0.3rem
    border-top-left-radius 0.3rem
    box-shadow 0px 0px 5px darken(abi(1), 90%)

// poyanmeaeish
.slide.ng-hide-add,
.slide.ng-hide-remove
  display block!important

.slide.ng-hide-add,
.slide.ng-hide-remove.ng-hide-remove-active
  z-index 1
  animation slideInDown 950ms

.slide.ng-hide-add.ng-hide-add-active,
.slide.ng-hide-remove
  animation slideOutUp 1200ms
  z-index 0
  h1
    animation fadeInUp 1500ms
    animation-delay 400ms
  p
    animation fadeInUp 1850ms
    animation-delay 400ms
