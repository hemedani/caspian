@require 'moteghayer'

div.sarbarg
	position fixed
	width 100%
	.paein
		line-height 2.3rem
		font-size 1rem
		height 5rem
		position relative
		padding-top 1.3rem
		background-color lighten(rang, 92%)
		border-bottom: 0.2rem solid darken(rang, 55%)
		color white
		text-shadow 0 1px 15px rgba(0,0,0,1)
		box-shadow 0 1px 15px rgba(0,0,0,.8)
		color white
		transition all 0.6s ease
		.LogoArm
			align(both)
			height 80%
		.LogoNeveshte
			align(vertical)
			padding-left 1rem
			left 0
	.balla
		width 100%
		height 2.5rem
		background-color darken(rang, 55%)
		transition all 0.6s ease

div.sticky
	.balla
		display none
	.paein
		z-index 1500
		top 0
		font-size 1.2rem
		height 4rem
		padding-top 0.2rem
		background-color rgba(0,0,0,0.4)
		a
			font-size 3.5rem
