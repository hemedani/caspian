@require 'moteghayer'

.sarbarg
	width 100%
	position fixed
	z-index 4
	transition all 0.6s ease
	.paein
		line-height 2.3rem
		font-size 1rem
		height 5.2rem
		position relative
		background-color lighten(sorme(1), 92%)
		border-bottom: 0.18rem solid rgb(126, 121, 114)
		border-top: 0.3rem solid darken(sorme(1), 55%)
		color white
		text-shadow 0 1px 15px rgba(0,0,0,1)
		box-shadow 0 1px 15px rgba(0,0,0,.8)
		color white
		.LogoArm
			align(both)
			height 80%
		.LogoNeveshte
			align(vertical)
			padding-left 1rem
			left 0
	.balla
		width 100%
		height 1.9rem
		background-color sorme(1)

.sarbarg.sticky
	width 8rem
	right 2rem
	top 2rem
	.balla
		display none
	.paein
		z-index 1500
		top 0
		font-size 1.2rem
		height 4.5rem
		padding-top 0
		background-color lighten(sorme(0.7), 88%)
		border-radius 0.4rem
		.LogoArm
			right -1rem
		.LogoNeveshte
			display none
		.btn-menu
			right 4.5rem
		a
			font-size 3.5rem
