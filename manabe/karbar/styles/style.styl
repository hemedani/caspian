@require 'moteghayer'

snap-content
  background-color #fff
  outline-style solid
  outline-width 0.2rem
  outline-color lighten(rangRGB(0.6), 30%)
  box-shadow 0 0 3rem darken(rang, 60%)
  font-family 'WYekan'
  div.wrap
    min-height 45rem

.direction
  direction rtl
  position relative

.wrap
	center(70rem, 1.2rem)

aside
	stack()
	text-align center
	@media(min-width: 40rem)
		col(1/3)
	nav
		margin-bottom 1rem
		a
			display block
			background lighten(red, 35%)
			color: white
			text-decoration none
			padding 1rem
			border-bottom 1px solid lighten(red, 5%)
.posts
	stack()
	@media(min-width: 40rem)
		col(2/3)

img
	max-width: 100%

.post
	cf()
	border 1px solid darken(white, 30%)
	padding 1rem
	margin 1rem
	> img
		stack()
		@media(min-width: 40rem)
			col(1/4)
	> article
		stack()
		@media(min-width: 40rem)
			col(3/4)

.logo
	> img
		center()
		max-width 100%
		margin-bottom 1rem
		margin-top 1rem
		display block

.pi-row
  direction rtl
  .pi-col-sm
    float right
    .pi-list-with-icons
      list-style none
    .pi-bullet-icon
      font-size 3rem
      padding-left 0.5rem
      color rang
