@require 'moteghayer'
snap-content
	background-color lighten(bezh(1), 80%)
	outline-style solid
	outline-width 0.2rem
	outline-color lighten(rangRGB(0.6), 30%)
	box-shadow 0 0 3rem darken(rang, 60%)
	font-family 'WYekan'
	z-index 99
	div.lafaf
		min-height 45rem

h1,h2,h3,h4,p,a
	margin 0

.direction
	direction rtl
	position static
	height 100%
	width 100%

.lafaf
	center(100%)
	padding-top 8rem

.mine-lafaf
	position relative

.mine-lafaf-80
	center(80%, 2rem)

aside
	stack()
	text-align center
	@media(min-width: 40rem)
		col(1/3)
	nav
		margin-bottom 1rem
		a
			display block
			background lighten(red, 35%)
			color: white
			text-decoration none
			padding 1rem
			border-bottom 1px solid lighten(red, 5%)
.posts
	stack()
	@media(min-width: 40rem)
		col(2/3)

img
	max-width: 100%

.post
	cf()
	border 1px solid darken(white, 30%)
	padding 1rem
	margin 1rem
	> img
		stack()
		@media(min-width: 40rem)
			col(1/4)
	> article
		stack()
		@media(min-width: 40rem)
			col(3/4)

.logo
	> img
		center()
		max-width 100%
		margin-bottom 1rem
		margin-top 1rem
		display block
