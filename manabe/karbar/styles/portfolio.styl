@require 'moteghayer'
.portfolio-item
  stack()
  @media(min-width 40rem)
    col(1/3)
  margin 6rem 0
  position relative
  perspective 600px
  .portfolio-bg
    center()
    text-align center
    width 18rem
    height 25rem
    font-size 8rem
    color darken(ghermez(0.8), 10%)
    box-shadow 0px 0px 10px #000
    border 3px dashed darken(ghermez(0.8), 40%)
    border-radius 1rem
    background-color ghermez(0.5)
    transform rotateY(-30deg)
    transition transform 0.5s ease
  .portfolio-description
    background-color lighten(bezh(0.8), 20%)
    color white
    font-size 20px
    padding 0.5rem
    width 16rem
    position absolute
    top 13rem
    margin-right auto
    margin-left auto
    left 0
    right 0
    border 3px dotted white
    border-radius 1rem
    box-shadow 0px 0px 10px #000
    transform rotateY(-30deg) translateZ(60px)
    transition transform 0.5s ease
    h4
      text-align center
      margin 0.3rem 0
    p
      margin 0.3rem 0

.portfolio-item:hover
  .portfolio-bg
    transform rotateY(0deg)
  .portfolio-description
    transform rotateY(0deg) translateZ(0px)
